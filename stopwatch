//js
let ms=0,s=0,m=0,h=0;
let timer=null;
let running =false;
function start(){

    if(!running){
        running=true;
        timer=setInterval(update,10);
    }
}
function stop(){
    running=false;
    clearInterval(timer);

}
function reset(){
    running=false;
    clearInterval(timer);
    h=m=s=ms=0;
    document.getElementById("display").textContent="00:00:00:000";
}
function update(){
ms+=10;
if(ms==1000){
    ms=0;
    s++;
}
if(s==60){
    s=0;
    m++;
}
if(m==60)
{
    m=0;
    h++;
}
let hr=h<10?"0"+h:h;
let min=m<10?"0"+m:m;
let sec=s<10?"0"+s:s;
let mil=ms<100?"0"+(ms<10?"0"+ms:ms):ms;
document.getElementById("display").textContent=`${hr}:${min}:${sec}:${mil}`;
}
