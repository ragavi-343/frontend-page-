
function generatePassword(len,lower,upper,numbers,symbols) {
    const lowerChars = 'abcdefghijklmnopqrstuvwxyz';  
    const upperChars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
    const numberChars = '0123456789';
    const symbolChars = '!@#$%^&*()_+~`|}{[]:;?><,./-=';
    let allochar="";
    let password="";
    allochar+=lower?lowerChars:"";
    allochar+=upper?upperChars:"";
    allochar+=numbers?numberChars:"";
    allochar+=symbols?symbolChars:"";
    if(len<8){
        return `Password length should be at least 8 characters.`;
    }
    if(allochar.length===0)
    {
      return `At least one character type should be selected.`;
    }
    for(let i=0;i<len;i++)
    {
      const ranin=Math.floor(Math.random()*allochar.length);
      password+=allochar[ranin];
    }
    return password;
}
const passwordLength = 9;
const lower=true;
const upper=true;
const numbers=true;
const symbols=true;
const pass=generatePassword(passwordLength,lower,upper,numbers,symbols);
console.log(pass);
