//js
function calculate() {
  const fiam = document.getElementById("result");
  const totval = document.getElementById("totval").value;
  const rate = document.getElementById("int").value;
  const years = document.getElementById("years").value;

  // Convert input values to numbers
  const principal = Number(totval);
  const r = Number(rate/ 100);
  const t = Number(years);

  if (isNaN(principal) || isNaN(r) || isNaN(t)) {
    fiam.textContent = "Please enter valid numbers!";
    return;
  }

  const amount = principal * Math.pow((1 + r), t);
  fiam.textContent = "Total: â‚¹" + amount.toFixed(2);
}

  
